extends video_layout

block content
  h1 Title: #{title}

  p #[strong game title:] #{game.title}
  p #[strong max_players:] #{game.max_players}
  p #[strong min_players:] #{game.min_players}
  p #[strong description:] #{game.description}
  p #[strong Bookings:]
    each val, index in game.bookings      
      a(href=val.url) #{val.game}: #{val.playername}
      if index < book.genre.length - 1
        |,
  p
    a(href='/con/booking/create') Sign up to a game

  
  a(href=game.url+'/delete') Delete this game with ID: #{game._id}.  
